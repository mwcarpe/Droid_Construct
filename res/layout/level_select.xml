<?xml version="1.0" encoding="utf-8"?>
        	
<RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" 
  xmlns:android="http://schemas.android.com/apk/res/android">
  
  	<ImageView 
       	android:id="@+id/mainMenuBackground"
       	android:src="@drawable/levelselect_background"
       	android:adjustViewBounds="true"
       	android:gravity="center_vertical"
       	android:scaleType="fitXY"
       	android:layout_width="fill_parent"
       	android:layout_height="fill_parent"
       	android:layout_x="0dp" 
       	android:layout_y="0dp" />
       	
    <ImageView 
   		android:id="@+id/message_loading"
       	android:src="@drawable/mainmenu_loading"
       	android:layout_height="wrap_content" 
       	android:layout_width="wrap_content" 
       	android:layout_gravity="left"
       	android:visibility="gone"/>
        	
	<ScrollView
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	    
	    <TableLayout
	    	android:id="@+id/tablelayout01"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:padding="10dip"
	    	android:stretchColumns="0,1,2">
	    	
	    	<TableRow>
	    		<LinearLayout
	          		android:layout_width="fill_parent"
	           		android:layout_height="50dip"/>
	    	</TableRow>
	    	
	    	<TableRow
	    		android:id="@+id/tablerow01"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center_vertical|center_horizontal">
	    		   	
	    		<ImageView 
	        		android:id="@+id/button_level01"
	        		android:src="@drawable/mainmenu_level01_unpress"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	        		
	        	<ImageView 
	        		android:id="@+id/button_level02"
	        		android:src="@drawable/mainmenu_level02_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	        		
	        	<ImageView 
	        		android:id="@+id/button_level03"
	        		android:src="@drawable/mainmenu_level03_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	    	</TableRow>
	    	
	    	<TableRow>
	    		<LinearLayout
	          		android:layout_width="fill_parent"
	           		android:layout_height="50dip"/>
	    	</TableRow>
	    	
	    	<TableRow
	    		android:id="@+id/tablerow02"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center_vertical|center_horizontal">
	    	
	    		<ImageView 
	        		android:id="@+id/button_level04"
	        		android:src="@drawable/mainmenu_level04_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	        		
	        	<ImageView 
	        		android:id="@+id/button_level05"
	        		android:src="@drawable/mainmenu_level05_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	        		
	        	<ImageView 
	        		android:id="@+id/button_level06"
	        		android:src="@drawable/mainmenu_level06_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	    	</TableRow>
	    	
	    	<TableRow>
	    		<LinearLayout
	          		android:layout_width="fill_parent"
	           		android:layout_height="50dip"/>
	    	</TableRow>
	    	
	    	<TableRow
	    		android:id="@+id/tablerow03"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:layout_gravity="center_vertical|center_horizontal">
	    	
	    		<ImageView 
	        		android:id="@+id/button_level07"
	        		android:src="@drawable/mainmenu_level07_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	        		
	        	<ImageView 
	        		android:id="@+id/button_level08"
	        		android:src="@drawable/mainmenu_level08_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	        		
	        	<ImageView 
	        		android:id="@+id/button_level09"
	        		android:src="@drawable/mainmenu_level09_gray"
	        		android:layout_width="wrap_content" 
	       			android:layout_height="wrap_content" 
	        		android:layout_gravity="center"
	        		android:clickable="true"/>
	    	</TableRow>
	    
	    </TableLayout>
	
	</ScrollView>

</RelativeLayout> 